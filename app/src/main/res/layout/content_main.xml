<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >
        <ScrollView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <!-- team-->
                <TextView
                    android:layout_width="match_parent"
                    android:text="Team A"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
                <!-- point-->
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txtPointA"
                    android:textSize="64sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_height="wrap_content"
                    />
                <!-- button-->
                <Button
                    android:background="#d76730"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/btnPoint3A"
                    android:layout_width="match_parent"
                    android:text="+3 POINTS"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:layout_marginBottom="5dp"
                    android:background="#d76730"
                    android:id="@+id/btnPoint2A"
                    android:layout_width="match_parent"
                    android:text="+2 POINTS"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:background="#d76730"
                    android:id="@+id/btnPointFreeA"
                    android:layout_width="match_parent"
                    android:text="FREE THROW"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#999"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <ScrollView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!-- team-->
                <TextView
                    android:layout_width="match_parent"
                    android:text="Team B"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
                <!-- point-->
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txtPointB"
                    android:textSize="64sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_height="wrap_content"
                    />
                <!-- button -->
                <Button
                    android:background="#d76730"
                    android:id="@+id/btnPoint3B"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:text="+3 POINTS"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:background="#d76730"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/btnPoint2B"
                    android:layout_width="match_parent"
                    android:text="+2 POINTS"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:background="#d76730"
                    android:id="@+id/btnPointFreeB"
                    android:layout_width="match_parent"
                    android:text="FREE THROW"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <Button
            android:background="#d76730"
            android:id="@+id/btnReset"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>
